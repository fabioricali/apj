{
  "name": "apj",
  "version": "1.0.0",
  "description": "Start with a complete Koa server with zero configuration.",
  "main": "index.js",
  "scripts": {
    "preversion": "npm run-script test && npm run-script doc && git commit -a -m \"Update README\"",
    "version:major": "npm version major",
    "version:minor": "npm version minor",
    "version:patch": "npm version patch",
    "postversion": "git push --follow-tags && npm publish",
    "test": "mocha test",
    "doc": "jsdoc2md --template README.hbs --no-gfm --files src/Apj.js > README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fabioricali/apj.git"
  },
  "keywords": [
    "koa",
    "api",
    "static",
    "server"
  ],
  "author": "Fabio Ricali",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.5.2",
    "koa-body": "^4.0.4",
    "koa-helmet": "^4.0.0",
    "koa-json-success": "^1.2.2",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "valify": "^4.5.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^5.2.0",
    "supertest": "^3.1.0"
  }
}
